{
  "name": "__MSG_application_title__",
  "description": "__MSG_application_description__",
  "version": "1.0",
  "default_locale": "en",
  "background": {
    "scripts": ["js/background.min.js"]
  },
  "omnibox": {
      "keyword" : "jira"
  },
  "icons": {
    "16": "images/jira_16.png",
    "48": "images/jira_48.png",
    "128": "images/jira_128.png"
  },
  "manifest_version": 2,
  "options_page": "html/options.html",
  "homepage_url": "http://nathanmac.com/jira-search",
  "permissions": [
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}